@model IEnumerable<AspMvcFlightsApp.Models.DataCity>?
<h1>Панель управления городами</h1>

<div>
    <a class="btn btn-primary" asp-area="Dashboard" asp-controller="City" asp-action="Create">Создать новый</a>
</div>

<table class="table-striped">
    <thead>
        <tr>
            <th>Назвние</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model is not null)
        {
            @foreach (var city in Model)
            {
                <tr>
                    <td>@city.Title</td>
                    <td>
                        <a class="btn btn-secondary" asp-area="Dashboard" asp-controller="City" asp-action="Edit" asp-route-id="@city.Id">Редактировать</a>
                    </td>
                    <td>
                        <form method="post" asp-area="Dashboard" asp-controller="City" asp-action="Delete" asp-route-id="@city.Id">
                            <input type="submit" class="btn btn-danger" value="Удалить" />
                        </form>
                    </td>
                </tr>
            }
        }
        
       
    </tbody>
    
</table>
