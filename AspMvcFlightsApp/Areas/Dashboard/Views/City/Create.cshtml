@model AspMvcFlightsApp.Models.DataCity

<h2>Новый город:</h2>
<form asp-action="create" asp-controller="city" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" />
    </div>
    <div class="mb-3">
        <p>Поля со (*) обязательны к заполнению</p>
    </div>
    <div class="mb-3">
        <input class="btn btn-success" type="submit" />
    </div>
</form>